EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# SQLite Database Path (relative to app directory)
DATABASE_PATH=database.db

# Database URL for SQLAlchemy (if using PostgreSQL/MySQL in production)
# DATABASE_URL=postgresql://user:password@localhost/sentinel_diagnostics

# ==============================================================================
# FLASK APPLICATION SETTINGS
# ==============================================================================

# Flask Secret Key for Sessions (Generate a strong random key)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Flask Environment (development/production)
FLASK_ENV=development
FLASK_DEBUG=True

# Application Host and Port
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ==============================================================================
# AI MODEL CONFIGURATION
# ==============================================================================

# AI Model Paths (relative to app directory)
BRAIN_MODEL_PATH=../models/best_brain.pth
LUNG_MODEL_PATH=../models/best_lung.pth
BREAST_MODEL_PATH=../breast_cancer/best.pth
YOLO_MODEL_PATH=../Lung_Cancer/runs/best.pt

# AI Processing Settings
AI_DEVICE=auto
AI_BATCH_SIZE=1
AI_CONFIDENCE_THRESHOLD=0.25

# ==============================================================================
# FILE UPLOAD SETTINGS
# ==============================================================================

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# Allowed file extensions
ALLOWED_EXTENSIONS=jpg,jpeg,png,dcm,pdf,doc,docx,txt

# Upload directory
UPLOAD_FOLDER=uploads

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=True
REQUIRE_NUMBERS=True
REQUIRE_UPPERCASE=True

# Session timeout (in minutes)
SESSION_TIMEOUT_MINUTES=60

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration (in minutes)
LOCKOUT_DURATION_MINUTES=30

# ==============================================================================
# MEDICAL PLATFORM SETTINGS
# ==============================================================================

# Platform Information
PLATFORM_NAME=Sentinel Diagnostics
PLATFORM_VERSION=1.0
ORGANIZATION_NAME=Team Victoriors

# Medical Compliance
HIPAA_COMPLIANT=True
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOGGING=True

# Emergency Contact
EMERGENCY_EMAIL=emergency@sentineldiagnostics.com
EMERGENCY_PHONE=1-800-SENTINEL

# ==============================================================================
# PAYMENT PROCESSING (if applicable)
# ==============================================================================

# Payment Gateway Configuration
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_secret

# ==============================================================================
# LOGGING AND MONITORING
# ==============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=app.log

# Enable Performance Monitoring
ENABLE_MONITORING=True

# ==============================================================================
# DEPLOYMENT SETTINGS
# ==============================================================================

# Production URLs
PRODUCTION_URL=https://your-domain.com
STAGING_URL=https://staging.your-domain.com

# SSL/TLS Settings
FORCE_HTTPS=False
SSL_CERTIFICATE_PATH=/path/to/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/path/to/ssl/private.key

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable/Disable Platform Features
ENABLE_AI_DIAGNOSTICS=True
ENABLE_VIDEO_CONSULTATIONS=True
ENABLE_PAYMENTS=True
ENABLE_MOBILE_APP=True
ENABLE_MULTI_LANGUAGE=True

# AI Model Feature Flags
ENABLE_BRAIN_TUMOR_DETECTION=True
ENABLE_LUNG_CANCER_DETECTION=True
ENABLE_BREAST_CANCER_DETECTION=True
ENABLE_AI_ASSISTANT=True

# ==============================================================================
# THIRD-PARTY INTEGRATIONS
# ==============================================================================

# Video Consultation Platform (Jitsi)
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your-jitsi-app-id

# SMS Notifications (Twilio)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Cloud Storage (AWS S3)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_REGION=us-east-1

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Development Database URL (for testing)
DEV_DATABASE_URL=sqlite:///dev_database.db

# Test API Keys (for development only)
TEST_ROBOFLOW_API_KEY=test-api-key
TEST_GEMINI_API_KEY=test-gemini-key

# Debug Settings
DEBUG_AI_MODELS=False
DEBUG_DATABASE_QUERIES=False
DEBUG_EMAIL_SENDING=False

